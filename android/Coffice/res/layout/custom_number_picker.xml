<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffice_product_lightgray"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/number_minus_id"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/product_selected_del_button" />

    <com.android.custom.CustomEditText
        android:id="@+id/number_select_id"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:paddingLeft="3dp"
        android:paddingRight="2dp"
        android:cursorVisible="false"
        android:textSize="18sp" >
    </com.android.custom.CustomEditText>

    <ImageView
        android:id="@+id/number_plus_id"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/product_product_add_button" />

</LinearLayout>